<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Comedor Universitario</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/css/alertify.min.css"/>
    <script src="https://cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/alertify.min.js"></script>
    <link rel="stylesheet" type="text/css" href="/assets/css/principal.css">
    <script src="../assets/js/scriptFirst.js"></script>
</head>
<body>
    <header class="cabecera">
        <div class="left-info">
            <div class="direccion">Calle Falsa 123, Ciudad, País</div>
            <div class=" telefono">+123 456 789</div>
        </div>
        <div class="right-info">
            <button class="btn primary" onclick="showMenu()"><a>Menu</a></button>
            <button class="btn primary" onclick="showQuienesSomos()"><a>¿Quienes Somos?</a></button>
                <% if (login) { %>                                        
                    <a href="logout" class="a-logout"><button class="btn primary">Salir</button></a>
                <%} else { %>   
                    <a href="login" class="a-login"><button class="btn primary">Iniciar Sesion</button></a>
                <% } %>
        </div>
    </header>
    <Main> 
       <section class="img-2">
        <H2>COMEDOR UNIVERSITARIO</H2>
            <div>
                <img class="portada" src="/assets/img/background/PORTADA_WEB.png" alt="">
            </div>
            <div class="img-log">
                <a href="https://www.veritasint.com/blog/es/mejora-tu-salud-con-10-consejos-nutricionales/">
                    <img src="/assets/img/font-img/imgf-1.png" alt="">
                    <img src="/assets/img/font-img/imgf-2.png" alt="">
                </a>
                <img src="/assets/img/font-img/imgf-3.png" alt="">
                <img src="/assets/img/font-img/imgf-4.png" alt="">
                <button class="btn1" onclick="openSurveyModal()">
                    <img src="/assets/img/font-img/imgf-5.png" alt="">
                    <img src="/assets/img/font-img/imgf-6.png" alt="">    
                </button>
            </div>
       </section> 
    </Main>
    <!-- Modal -->
    <div id="surveyModal" class="modal">
      <div class="modal-content">
        <div class="modal-header">
          <h2>Formulario de Encuesta</h2>
          <span class="close" onclick="closeSurveyModal()">&times;</span>
        </div>
        <div class="modal-body">
          <form id="surveyForm">
            <label for="comentario">Comentario:</label>
            <textarea id="comentario" name="comentario" rows="4" required></textarea>
  
            <label for="puntuacion">Puntuación (1-5):</label>
            <input type="number" id="puntuacion" name="puntuacion" min="1" max="5" required>
  
            <button type="button" onclick="submitSurvey()">Enviar Encuesta</button>
          </form>
        </div>
      </div>
    </div>
    <!-- Modal para visualizar el menú -->
    <div id="menuModal" class="modal">
        <div class="modal-content">
            <span class="close" onclick="closeMenuModal()">&times;</span>
            <h2>Menú Semanal</h2>
            <hr>
            <table border="1" style="width:100%; border-collapse:collapse;">
                <thead>
                    <tr>
                        <th>Día</th>
                        <th>Desayuno</th>
                        <th>Almuerzo</th>
                    </tr>
                </thead>
                <tbody id="menuTableBody">
                    <!-- Las filas del menú se llenarán con JavaScript -->
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>